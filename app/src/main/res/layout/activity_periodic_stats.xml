<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    tools:context=".PeriodicStats">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <NumberPicker
                android:id="@+id/idPeriodSrtMnth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="10dp">
            </NumberPicker>

            <NumberPicker
                android:id="@+id/idPeriodSrtYr"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content">
            </NumberPicker>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="0dp"
                android:text="TO"
                android:textSize="15dp">
            </TextView>

            <NumberPicker
                android:id="@+id/idPeriodEndMnth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp">
            </NumberPicker>

            <NumberPicker
                android:id="@+id/idPeriodEndYr"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content">
            </NumberPicker>

        </LinearLayout>


        <Spinner
            android:id="@+id/idCategoryList"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:drawable/btn_dropdown"
            android:textColor="#0E0E0E"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            app:fontFamily="serif" />

        <Button
            android:id="@+id/idPeriodBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:text="GET DATA"
            android:textSize="15dp"
            android:height="50dp">
        </Button>

        <TextView
            android:id="@+id/idPeriodTxtVw"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Nothing"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textSize="70px"
            app:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </TextView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>